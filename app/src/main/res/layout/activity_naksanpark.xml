<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="40dp"
        >

        <EditText
            android:id="@+id/edit_keword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="낙산공원"
            android:gravity="center"
            android:layout_weight="1"
            />

        <ImageButton
            android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/search_icon"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_weight="4"
            />

        <ImageButton
            android:id="@+id/camera"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/camera_icon"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_weight="4"
            />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/naksanparkDes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15px"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="80px"
            android:text=" 키워드 설명"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="50px"
            android:padding="20px"
            android:text="좌청룡 우백호 남주작 북현무의 좌청룡에 해당. 서울특별시 종로구 혜화동, 이화동, 동숭동, 창신동, 숭인동, 성북구 삼선동, 보문동 일대에 걸쳐있는 야산. 과거엔 낙타의 등과 비슷하다 하여 낙타산이라 불렀다. 조선시대에는 왕실에서 먹을 우유를 공급하는 소들을 이 곳에서 키웠다고 한다. 그래서 '타락산'이라는 이명도 존재한다."
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100px"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="80px"
            android:text=" 키워드 주변 음식점" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300px"
            android:layout_marginTop="15px"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/naksan_food1"
                android:src="@drawable/naksanfood1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="5px"
                />

            <ImageView
                android:id="@+id/btnfood2"
                android:src="@drawable/naksanfood2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="5px"
                />

            <ImageView
                android:id="@+id/btnfood3"
                android:src="@drawable/naksanfood3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="5px"
                />

            <ImageView
                android:id="@+id/btnfood4"
                android:src="@drawable/naksanfood4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="5px"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:text="낙산애"
                android:gravity="center"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="부부식당"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:text="조선식당"
                android:gravity="center"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:text="핏제리아오"
                android:gravity="center"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100px"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="80px"
            android:text=" 키워드 주변 관광지"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300px"
            android:layout_marginTop="15px"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/naksan_tou1"
                android:src="@drawable/naksan_tou1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="5px"
                />

            <ImageView
                android:src="@drawable/naksan_tou2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="5px"
                />

            <ImageView
                android:src="@drawable/naksan_tou3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="5px"
                />

            <ImageView
                android:src="@drawable/naksan_tou4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="5px"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:text="이화동 벽화마을"
                android:gravity="center"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:text="낙산공원 낙산정"
                android:gravity="center"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:text="마로니에 공원"
                android:gravity="center"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:text="이화장"
                android:gravity="center"
                />

        </LinearLayout>

    </LinearLayout>




</LinearLayout>