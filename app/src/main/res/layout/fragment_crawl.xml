<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/recommendkeyword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="20dp"
        >

        <ImageView
            android:id="@+id/crawl_image"
            android:layout_width="match_parent"
            android:layout_height="243dp"
            android:src="@drawable/sorryicon" />

        <TextView
            android:id="@+id/test_crawl_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:text="특징이 부각된 사진이나\n추천키워드로 검색해주시길 바랍니다."
            android:gravity="center"
            android:textColor="#000000"
            android:textStyle="bold"/>

        <LinearLayout
            android:id="@+id/linear_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:visibility="invisible"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:textColor="#000000"
                android:layout_weight="1"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="등수"
                    android:textColor="#000000"
                    android:gravity="center"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textColor="#000000"
                    android:gravity="center"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textColor="#000000"
                    android:gravity="center"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textColor="#000000"
                    android:gravity="center"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:textColor="#000000"
                    android:gravity="center"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:textColor="#000000"
                    android:gravity="center"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="빈도수"
                    android:textColor="#000000"
                    android:gravity="center"
                    />

                <TextView
                    android:id="@+id/freq1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:textColor="#000000"
                    android:gravity="center"
                    />
                <TextView
                    android:id="@+id/freq2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:textColor="#000000"
                    android:gravity="center"
                    />

                <TextView
                    android:id="@+id/freq3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textColor="#000000"
                    android:gravity="center"
                    />

                <TextView
                    android:id="@+id/freq4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textColor="#000000"
                    android:gravity="center"
                    />

                <TextView
                    android:id="@+id/freq5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textColor="#000000"
                    android:gravity="center"
                    />



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="추천 키워드"
                    android:textColor="#000000"
                    android:gravity="center"
                    />

                <TextView
                    android:id="@+id/keyword1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="낙산"
                    android:textColor="#000000"
                    android:gravity="center"
                    />
                <TextView
                    android:id="@+id/keyword2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="공원"
                    android:textColor="#000000"
                    android:gravity="center"
                    />

                <TextView
                    android:id="@+id/keyword3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="노을"
                    android:textColor="#000000"
                    android:gravity="center"
                    />

                <TextView
                    android:id="@+id/keyword4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="네이버"
                    android:textColor="#000000"
                    android:gravity="center"
                    />

                <TextView
                    android:id="@+id/keyword5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="블로그"
                    android:textColor="#000000"
                    android:gravity="center"
                    />


            </LinearLayout>


        </LinearLayout>

    </LinearLayout>


</LinearLayout>